mixin videoPlayer(video = {})
    h1 Original
        video(controls='', width="1200px")
            source(src=video.src, type='video/webm')
            source(src=video.src, type='video/mp4')
        br
    .videoPlayer#jsVideoPlayer
        
        h1 Custom
        video(src=video.src)
  

        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeBtn
                    //- fontawesome에서 가져온 것
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    span  /
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span
                    i.fas.fa-expand